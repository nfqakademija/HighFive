{% extends "::base.html.twig" %}

{% block title %}Test - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <hr class="separator">
        <div class="col-md-12">
            <div class="description">
                <h1><b>Žaidimo režimas</b></h1>
                <div class="clearfix"></div>
                <hr>
                <p> Žaidimo režime galite sudėlioti kaulus į jų atitinkamas vietas. </p>
            </div>
            <hr class="separator">
        </div>
    </div>

    <div class="canvas-container">
        <canvas id="canvas" width="100%" height="500"></canvas>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="levelModal" tabindex="-1" role="dialog" aria-labelledby="levelModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel"><span id="gameLevel">1</span> lygis įveiktas</h4>
                </div>
                <div class="modal-body">
                    <p id="modalText">kazkoks success tekstas...</p>
                </div>
                <div class="modal-footer">
                    <button id="restartGame" type="button" class="btn btn-default" data-dismiss="modal">Iš naujo</button>
                    <button id="nextGameLevel" type="button" class="btn btn-primary" data-dismiss="modal">Sekantis Lygis</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script language="javascript">
        var bonesImagesBaseDir = "{{ asset('images/bones/') }}";

        var canvasType = "{{ type }}";

        // TEMP
        var bonesJsonDir = "{{ asset('js/bones.json') }}";
    </script>
{% endblock %}
