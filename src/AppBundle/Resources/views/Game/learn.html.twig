{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            font-weight: 100;
            font-family: 'Lato';
        }

        .title {
            margin: 20px auto;
            text-align: center;
            font-size: 96px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="title">SkeletOn</div>

    <div class="canvas-container">
        <canvas id="canvas" width="100%" height="500"></canvas>

        <div id="popover" class="popover">
            <div class="subtitle"></div>
            <div class="desc"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script language="javascript">
        var bonesImagesBaseDir = "{{ asset('images/bones/') }}";

        var canvasType = "{{ type }}";

        // TEMP
        var bonesJsonDir = "{{ asset('js/bones.json') }}";
    </script>
{% endblock %}
